{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "typst",
      "args": [
        "--font-path",
        "fonts/",
        "compile",
        "${file}"
      ],
      "group": "build"
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "typst",
      "args": [
        "--font-path",
        "fonts/",
        "watch",
        "${file}"
      ],
      "group": "build"
    }
  ]
}
